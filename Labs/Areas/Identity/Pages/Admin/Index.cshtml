@page
@model Labs.Areas.Identity.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].DishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Calories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dish) {
        <tr>
                <td>
                    <img src="~/Images/@item.Image" alt="NoImage" width="50" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DishId" class="btn btn-outline-primary"><span class="fa fa-edit"></span></a>
                <a asp-page="./Delete" asp-route-id="@item.DishId" class="btn btn-outline-danger"><span class="fa fa-trash-alt"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
